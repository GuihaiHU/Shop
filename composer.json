{
    "license": "MIT",
    "name": "antvel/shop",
    "homepage": "http://antvel.com",
    "type": "laravel-bundle",
    "description": "The Laravel e-commerce shop core.",
    "keywords": ["antvel", "laravel", "e-commerce", "ecommerce", "shop", "portal", "market", "store"],
    "minimum-stability": "dev",

    "support": {
        "source": "https://github.com/ant-vel/Shop",
        "issues": "https://github.com/ant-vel/Shop/issues"
    },

    "require": {
        "php": "~7.0|~7.1",
        "nesbot/carbon": "^1.21"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "orchestra/testbench": "^3.3",
        "mockery/mockery": "dev-master"
    },

    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Antvel\\": "src/"
        },
        "files": [
            "src/Foundation/helpers.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Antvel\\Tests\\": "tests"
        },
        "classmap": [
            "tests/TestCase.php"
        ]
    },

    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
